@model IEnumerable<Zoo.BLL.Entities.Animal>

@{
    ViewBag.Title = "Index";
}

<h2>Zoo(main page)</h2>
@if (HttpContext.Current.User.IsInRole("Руководитель"))
                {
<p>
    @Html.ActionLink("Create New", "Create")
</p>
}
<div style="width: 70%; min-width:560px; border: 1px dashed; background-color:#ff6a00; float: left; margin-left: 15px; text-align: center; ">
    <table>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.KindOfAnimal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GenderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LifecycleId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmentId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberFeeding)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiscriptionFeed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedingId)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.KindOfAnimal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lifecycles.EnteredOrBorn)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberFeeding)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiscriptionFeed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Feeding.NameFeeding)
                </td>
                @if (HttpContext.Current.User.IsInRole("Руководитель"))
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Login)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                }
            </tr>
        }
    </table>
</div>

<div style=" width: 200px; height: 1px; float: left; margin-left: 20px; "
     id="datepicker"></div>

<div style=" width:100%; height:1px; clear:both;"></div>

@section Scripts {

<script type="text/javascript">

    $.datepicker.regional['ru'] = {
        closeText: 'Закрыть',
        prevText: 'Пред',
        nextText: 'След',
        currentText: 'Сегодня',
        monthNames: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь',
        'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
        monthNamesShort: ['Янв', 'Фев', 'Мар', 'Апр', 'Май', 'Июн',
        'Июл', 'Авг', 'Сен', 'Окт', 'Ноя', 'Дек'],
        dayNames: ['воскресенье', 'понедельник', 'вторник', 'среда', 'четверг', 'пятница', 'суббота'],
        dayNamesShort: ['вск', 'пнд', 'втр', 'срд', 'чтв', 'птн', 'сбт'],
        dayNamesMin: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'],
        weekHeader: 'Не',
        dateFormat: 'dd.mm.yy',
        firstDay: 1,
        isRTL: false,
        showMonthAfterYear: false,
        yearSuffix: ''
    };
    $.datepicker.setDefaults($.datepicker.regional['ru']);

    $("#datepicker").datepicker({
        
        onSelect: function (dateText, inst) {
            $(this).css("background-color", "");
            alert("Выбрано: " + dateText +
              "\n\nid: " + inst.id +
              "\nselectedDay: " + inst.selectedDay +
              "\nselectedMonth: " + inst.selectedMonth +
              "\nselectedYear: " + inst.selectedYear);
        }
       
    });
    


</script>
}
