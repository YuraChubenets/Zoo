@model Zoo.BLL.Entities.Animal
    <div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" aria-hidden="true">X</button>
        <h4>Animal</h4>
    </div>
    @using (Html.BeginForm("Create", "Animal", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="modal-body">
            <div class="editor-label">
                @Html.LabelFor(model => model.KindOfAnimal)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.KindOfAnimal)
                @Html.ValidationMessageFor(model => model.KindOfAnimal)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.GenderId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.GenderId, ViewBag.Genders as SelectList)
                @Html.ValidationMessageFor(model => model.Gender)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.DepartmentId)
            </div>
            <div class="editor-field">

                @Html.DropDownListFor(model => model.DepartmentId, ViewBag.Departments as SelectList)
                @Html.ValidationMessageFor(model => model.Department)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.NumberFeeding)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.NumberFeeding)
                @Html.ValidationMessageFor(model => model.NumberFeeding)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.DiscriptionFeed)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.DiscriptionFeed)
                @Html.ValidationMessageFor(model => model.DiscriptionFeed)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.UserId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.UserId, ViewBag.Users as SelectList)
                @Html.ValidationMessageFor(model => model.User)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.FeedingId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.FeedingId, ViewBag.Feedings as SelectList)
                @Html.ValidationMessageFor(model => model.Feeding)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.LifecycleId)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => model.LifecycleId, ViewBag.Lifecycles as SelectList)
                @Html.ValidationMessageFor(model => model.Lifecycles)
            </div>

            <p>
                <input type="submit" value="Create" />
            </p>
        </div>

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
