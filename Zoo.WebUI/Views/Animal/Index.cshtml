@{
    ViewBag.Title = "Index";
}
<h2>Zoo-Kiev</h2>

<div class="row text-center">
    <div id="GridDiv" class="col-lg-6 col-sm-6 col-md-6  col-lg-offset-1">
        @Html.Partial("_GetAnimals")
    </div>

    <div class="col-lg-1 col-sm-1">
   
    </div>

   <div class="col-lg-4 col-sm-4 col-md-4  col-xs-4 " id="datepicker"></div>
</div>

   <div class="row" >
     <div class=" col-lg-12"> <div id="editForm"></div> 
    </div>
</div>

   

@section Scripts {

    <script type="text/javascript">

        $.datepicker.regional['ru'] = {
            closeText: 'Закрыть',
            prevText: 'Пред',
            nextText: 'След',
            currentText: 'Сегодня',
            monthNames: ['Январь', 'Февраль', 'Март', 'Апрель', 'Май', 'Июнь',
            'Июль', 'Август', 'Сентябрь', 'Октябрь', 'Ноябрь', 'Декабрь'],
            monthNamesShort: ['Янв', 'Фев', 'Мар', 'Апр', 'Май', 'Июн',
            'Июл', 'Авг', 'Сен', 'Окт', 'Ноя', 'Дек'],
            dayNames: ['воскресенье', 'понедельник', 'вторник', 'среда', 'четверг', 'пятница', 'суббота'],
            dayNamesShort: ['вск', 'пнд', 'втр', 'срд', 'чтв', 'птн', 'сбт'],
            dayNamesMin: ['Вс', 'Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб'],
            weekHeader: 'Не',
            dateFormat: 'dd.mm.yy',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ''
        };
    $.datepicker.setDefaults($.datepicker.regional['ru']);


    $("#datepicker").datepicker({

        onSelect: function (dateText, inst) {
            $(this).css("background-color", "");

            $.ajax({
                type: "POST",
                url: "/Animal/GetAnimals",
                data: { "date": dateText },
                success: function (data) {
                    ("#tableAnimals").html(data);
                }
            });
        }
    });
</script>
}
